@model IEnumerable<SampleMVCSite.Models.Customer>

@{
    ViewBag.Title = "Customers Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="services">
    <div class="container">
        <div class="box first">
            <h3>Manage Customer</h3>

            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-large" })
            </p>

            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Manage Customer List</div>

                <!-- Table -->
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Town)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PostalCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomePhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BusinessPhone)
                        </th>
                        <th>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Town)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HomePhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BusinessPhone)
                            </td>
                            <td>
                            </td>
                            <td width="282px">
                                <i class="icon-pencil icon-menu"></i>
                                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }, new { @class = "actionLinkEdit" }) &nbsp;
                                <i class="icon-info icon-menu"></i>
                                @Html.ActionLink("Details", "Details", new { id = item.CustomerId }, new { @class = "actionLinkDetails" })
                                <i class="icon-trash icon-menu"></i>
                                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }, new { @class = "actionLinkDelete", onclick = "return confirm('Are you sure you wish to delete this record?');" })
                            </td>
                        </tr>
                    }
                </table>
            </div>

       
        </div>
    </div>
</section>
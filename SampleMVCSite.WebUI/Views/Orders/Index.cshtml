@model IEnumerable<SampleMVCSite.Models.Order>

@{
    ViewBag.Title = "Orders Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="services">
    <div class="container">
        <div class="box first">
            <h3>Manage Orders</h3>

            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-large" })
            </p>

            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Manage Orders</div>

                <table class="table fixed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CustomerId)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerId)
                            </td>
                            <td width="282px">
                                <i class="icon-pencil icon-menu"></i>
                                @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }, new { @class = "actionLinkEdit" }) &nbsp;
                                <i class="icon-info icon-menu"></i>
                                @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "actionLinkDetails" })
                                <i class="icon-trash icon-menu"></i>
                                @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "actionLinkDelete", onclick = "return confirm('Are you sure you wish to delete this record?');" })
                            </td>
                        </tr>
                    }

                </table>
            </div>


        </div>
    </div>
</section>



